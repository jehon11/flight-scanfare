

<% n = 0 %>
<% @hmax =[] %>
<% @hmin =[] %>

<% @topdeals.each do |deal| %>
  <% @hmax << deal.get_historical.map(&:last).max %>
  <% @hmin << deal.get_historical.map(&:last).min %>
      <!-- New -->
<div class="half-card <%= 'selected_deal' if n == 0 %>"  style="margin-bottom: 5px;" id="<%= deal.id %>">
  <% n+=1 %>
  <div class="card-deal">

      <div class="deal-dates">
        <div class="duration">
          <%= "#{(deal.return_date-deal.depart_date).to_i} days"%>
        </div>
        <div class="week_day">
          <%= "#{deal.depart_date.strftime('%a')} - #{deal.return_date.strftime('%a')}"%>
        </div>
        <div class="long-date">
          <%= "#{deal.depart_date.strftime('%d %b %Y')} - #{deal.return_date.strftime('%d %b %Y')}"%>
        </div>
      </div>

      <div class="deal-price">
        <div class="original-price">
          <%="¥#{number_with_delimiter(deal.price - deal.discount_abs, delimiter: ",")}" %>
        </div>
        <div class="price-now">
          <%="¥#{number_with_delimiter(deal.price, delimiter: ",")}" %>
        </div>
        <div class="discount-perc">
          <%= "#{deal.discount_perc}%" %> from usual
        </div>
      </div>


    <%= link_to "", chart_path(deal), class: 'card-link', remote: true  %>

  </div>
  <div class="card-deal-right">
    <div class="card-deal-description-right">
      <%= link_to deal_path(id:deal), class: "book-button", target: :_blank do %>
      <div>Select</div>
      <% end %>
    </div>
  </div>
</div>
<% end %>



