<% @topdeals.each do |deal| %>
<div class="card-deal">
  <p id="initial-price"><%="#{deal.price - deal.discount_abs}$"%></p>
  <p id="new-price"><%="#{deal.price}$" %></p>
  <p id="discount"><%= "#{deal.discount_perc}%" %></p>
  <div class="card-deal-description">

    <h3><%= "#{deal.depart_date} - #{deal.return_date}"%></h3>
  </div>
   <%= link_to "", deals_path(name: params[:name],chart_id:deal), class: 'card-link' %>
</div>
<% end %>


